# App Configuration
NEXT_PUBLIC_PRICE_EUR_PER_MONTH=19
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Pricing Configuration
# Currency and pricing values are in environment variables
# Features, descriptions, and other metadata are configured in src/lib/pricing-data.ts
# Currency: USD or EUR (default: EUR)
PRICING_CURRENCY=EUR

# Creator Lite Tier Pricing (display name: "Creator Lite", tier code: LITE)
PRICING_LITE_MONTHLY=9
PRICING_LITE_YEARLY=7
PRICING_LITE_TEAM_MEMBERS=1

# Creator Pro Tier Pricing (display name: "Creator Pro", tier code: STARTER)
PRICING_STARTER_MONTHLY=19
PRICING_STARTER_YEARLY=15
PRICING_STARTER_TEAM_MEMBERS=1

# Growth Tier Pricing
PRICING_GROWTH_MONTHLY=39
PRICING_GROWTH_YEARLY=32
PRICING_GROWTH_TEAM_MEMBERS=3
PRICING_GROWTH_EXTRA_SEAT=10

# Enterprise Tier Pricing (Custom pricing - set to "Custom" or "Negotiated" as needed)
# PRICING_ENTERPRISE_MONTHLY=Custom
# PRICING_ENTERPRISE_YEARLY=Custom
# PRICING_ENTERPRISE_TEAM_MEMBERS=Custom
# PRICING_ENTERPRISE_EXTRA_SEAT=Negotiated

# Extra Seat Price (used in policy text)
PRICING_EXTRA_SEAT_PRICE=10

# Google Search Console Verification
# Get this from Google Search Console > Settings > Ownership verification
# Format: abc123xyz (just the verification code, not the full meta tag)
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Launch Configuration
# Set READY_FOR_FINAL_LAUNCH=true to enable waitlist mode (blocks signups, shows waitlist form)
# Server-side only (no NEXT_PUBLIC_ prefix) - cannot be edited by users in browser
READY_FOR_FINAL_LAUNCH=false

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Resend Email Configuration
RESEND_API_KEY=your_resend_api_key
# Optional: Custom sender email (defaults to onboarding@resend.dev for development if not set)
# For production, use your verified domain: Linkedbud <noreply@linkedbud.com>
RESEND_FROM_EMAIL=Linkedbud <noreply@linkedbud.com>

# LemonSqueezy Configuration
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_STORE_ID=your_lemonsqueezy_store_id
# Creator Lite tier variant ID (maps to LITE subscription tier, display name: "Creator Lite")
LEMONSQUEEZY_VARIANT_ID_LITE=your_lemonsqueezy_creator_lite_variant_id
# Creator Pro tier variant ID (maps to STARTER subscription tier, display name: "Creator Pro")
LEMONSQUEEZY_VARIANT_ID_PRO=your_lemonsqueezy_creator_pro_variant_id
# Growth tier variant ID (maps to GROWTH subscription tier, display name: "Growth")
LEMONSQUEEZY_VARIANT_ID_GROWTH=your_lemonsqueezy_growth_variant_id
# Growth tier extra seat variant ID (for additional team members)
LEMONSQUEEZY_VARIANT_ID_GROWTH_SEAT=your_lemonsqueezy_growth_seat_variant_id
# Optional: Add other tier variants as needed
# LEMONSQUEEZY_VARIANT_ID_ENTERPRISE=your_lemonsqueezy_enterprise_variant_id (maps to ENTERPRISE subscription tier)
LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret

# Note: LEMONSQUEEZY_WEBHOOK_SECRET and LEMONSQUEEZY_API_KEY are also needed as Supabase secrets
# Set them with:
# supabase secrets set LEMONSQUEEZY_WEBHOOK_SECRET=your_secret
# supabase secrets set LEMONSQUEEZY_API_KEY=your_api_key

# LinkedIn (Personal) App Configuration
# Note: These credentials are used for both:
# 1. LinkedIn API integration (posting, metrics, etc.) - redirects to /api/linkedin/callback
# 2. Supabase OAuth authentication - redirects to Supabase's callback endpoint
# Make sure to add both redirect URLs to your LinkedIn app's authorized redirect URLs:
# - For API: https://your-domain.com/api/linkedin/callback
# - For Auth: https://your-project.supabase.co/auth/v1/callback (production)
# - For Auth (local): http://localhost:54321/auth/v1/callback (local development)
LINKEDIN_CLIENT_ID=your_personal_app_client_id
LINKEDIN_CLIENT_SECRET=your_personal_app_client_secret

# LinkedIn Community Management API (Organizations) App Configuration
LINKEDIN_COMMUNITY_CLIENT_ID=your_community_mgmt_client_id
LINKEDIN_COMMUNITY_CLIENT_SECRET=your_community_mgmt_client_secret

# ScrapingBee Configuration
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key

# Generation Limits Configuration
# Use -1 for unlimited, 0 to disable feature
# Format: TIER_{TIER_NAME}_{TYPE}_LIMIT

# Free Tier (no subscription)
TIER_FREE_DRAFT_LIMIT=3
TIER_FREE_POLISH_LIMIT=10
TIER_FREE_FOR_YOU_LIMIT=5
TIER_FREE_REWRITE_WITH_AI_LIMIT=5
TIER_FREE_AI_INSIGHTS_LIMIT=10
# Note: TIER_FREE_PUBLISHED_POSTS_LIMIT is deprecated - use TIER_FREE_POSTS_PER_MONTH_LIMIT instead
# TIER_FREE_PUBLISHED_POSTS_LIMIT=2
TIER_FREE_POSTS_PER_MONTH_LIMIT=2

# Tier Limits Configuration
# Use -1 for unlimited, 0 to disable feature
# Format: TIER_{TIER_NAME}_{TYPE}_LIMIT
# Note: Tier names should match the pricing tiers (LITE, STARTER, GROWTH, ENTERPRISE)

# Creator Lite Tier Limits (display name: "Creator Lite", tier code: LITE)
TIER_LITE_DRAFT_LIMIT=30
TIER_LITE_POLISH_LIMIT=-1
TIER_LITE_FOR_YOU_LIMIT=-1
TIER_LITE_REWRITE_WITH_AI_LIMIT=-1
TIER_LITE_AI_INSIGHTS_LIMIT=-1
# Note: TIER_LITE_PUBLISHED_POSTS_LIMIT is deprecated - use TIER_LITE_POSTS_PER_MONTH_LIMIT instead
# TIER_LITE_PUBLISHED_POSTS_LIMIT=-1
TIER_LITE_POSTS_PER_MONTH_LIMIT=-1

# Creator Pro Tier Limits (display name: "Creator Pro", tier code: PRO)
# NOTE: Code uses "PRO" but env.example previously used "STARTER" - both are included for compatibility
# Set LEMONSQUEEZY_VARIANT_ID_PRO (Creator Pro tier variant) to match this tier's price_id
TIER_PRO_DRAFT_LIMIT=-1
TIER_PRO_POLISH_LIMIT=-1
TIER_PRO_FOR_YOU_LIMIT=-1
TIER_PRO_REWRITE_WITH_AI_LIMIT=-1
TIER_PRO_AI_INSIGHTS_LIMIT=-1
# Note: TIER_PRO_PUBLISHED_POSTS_LIMIT is deprecated - use TIER_PRO_POSTS_PER_MONTH_LIMIT instead
# TIER_PRO_PUBLISHED_POSTS_LIMIT=-1
TIER_PRO_POSTS_PER_MONTH_LIMIT=-1
# Legacy STARTER variables (for backward compatibility, but PRO is what the code actually uses)
TIER_STARTER_DRAFT_LIMIT=-1
TIER_STARTER_POLISH_LIMIT=-1
TIER_STARTER_FOR_YOU_LIMIT=-1
TIER_STARTER_REWRITE_WITH_AI_LIMIT=-1
TIER_STARTER_AI_INSIGHTS_LIMIT=-1
# Note: TIER_STARTER_PUBLISHED_POSTS_LIMIT is deprecated - use TIER_STARTER_POSTS_PER_MONTH_LIMIT instead
# TIER_STARTER_PUBLISHED_POSTS_LIMIT=-1
TIER_STARTER_POSTS_PER_MONTH_LIMIT=-1

# Growth Tier Limits
TIER_GROWTH_DRAFT_LIMIT=-1
TIER_GROWTH_POLISH_LIMIT=-1
TIER_GROWTH_FOR_YOU_LIMIT=-1
TIER_GROWTH_REWRITE_WITH_AI_LIMIT=-1
TIER_GROWTH_AI_INSIGHTS_LIMIT=-1
# Note: TIER_GROWTH_PUBLISHED_POSTS_LIMIT is deprecated - use TIER_GROWTH_POSTS_PER_MONTH_LIMIT instead
# TIER_GROWTH_PUBLISHED_POSTS_LIMIT=-1
TIER_GROWTH_POSTS_PER_MONTH_LIMIT=-1

# Enterprise Tier Limits
TIER_ENTERPRISE_DRAFT_LIMIT=-1
TIER_ENTERPRISE_POLISH_LIMIT=-1
TIER_ENTERPRISE_FOR_YOU_LIMIT=-1
TIER_ENTERPRISE_REWRITE_WITH_AI_LIMIT=-1
TIER_ENTERPRISE_AI_INSIGHTS_LIMIT=-1
# Note: TIER_ENTERPRISE_PUBLISHED_POSTS_LIMIT is deprecated - use TIER_ENTERPRISE_POSTS_PER_MONTH_LIMIT instead
# TIER_ENTERPRISE_PUBLISHED_POSTS_LIMIT=-1
TIER_ENTERPRISE_POSTS_PER_MONTH_LIMIT=-1

# Content Ideas Refresh Cooldown Configuration
# Cooldown duration in hours before users can generate new content ideas
# Format: TIER_{TIER_NAME}_CONTENT_IDEAS_COOLDOWN_HOURS
# Free Tier: 30 days (720 hours) - 1 generation per month
TIER_FREE_CONTENT_IDEAS_COOLDOWN_HOURS=720
# Creator Lite Tier: 7 days (168 hours)
TIER_LITE_CONTENT_IDEAS_COOLDOWN_HOURS=168
# Creator Pro Tier: 1 day (24 hours)
TIER_PRO_CONTENT_IDEAS_COOLDOWN_HOURS=24
# Growth Tier: 12 hours
TIER_GROWTH_CONTENT_IDEAS_COOLDOWN_HOURS=12
# Enterprise Tier: 12 hours
TIER_ENTERPRISE_CONTENT_IDEAS_COOLDOWN_HOURS=12
